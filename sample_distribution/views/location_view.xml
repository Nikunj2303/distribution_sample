<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sample Location Wizard View -->
    <record id="view_sample_location_wizard_form" model="ir.ui.view">
        <field name="name">sample.location.wizard.form</field>
        <field name="model">sample.location.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Sample Location">
                <group>
                    <field name="user_id"/>
                    <field name="company_id"/>
                </group>
                <footer>
                    <button name="create_sample_location" string="Create Sample Location" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Sample Location Wizard -->
    <record id="action_sample_location_wizard" model="ir.actions.act_window">
        <field name="name">Create Sample Location</field>
        <field name="res_model">stock.location</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

     Menu Item for Sample Location Wizard
    <menuitem id="menu_sample_location_wizard" name="Sample Location Wizard" parent="menu_distribution_sample_order" action="action_sample_location_wizard"/>
    <menuitem id="menu_sample_location_wizard_create" name="Create Sample Location" parent="menu_sample_location_wizard" action="action_sample_location_wizard"/>

</odoo>
